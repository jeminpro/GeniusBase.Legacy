@model GeniusBase.Web.Models.New.ArticleViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .article h1 {
        font-size: 2rem;
        font-weight: 400;
    }
    }
    
    .article-content h1 {
        font-size: 1.8rem;
        font-weight: 400;
    }

    .article-content h2 {
        font-size: 1.6rem;
        font-weight: 400;
    }

    .article-content h3 {
        font-size: 1.4rem;
        font-weight: 400;
    }

    .article-content h4 {
        font-size: 1.2rem;
        font-weight: 400;
    }

    .article-content h5 {
        font-size: 1.1rem;
        font-weight: 400;
    }

    .article-content h6 {
        font-size: 1rem;
        font-weight: 400;
    }


</style>

<div class="container article">

    <h1>
        <span class="line"></span> @Model.Title
    </h1>

    <div>
        <i class="fas fa-folder-open text-muted"></i>@Model.CategoryName
    </div>
    &nbsp;
    @if (Context.Request.IsAuthenticated)
    {
        <a href='@Url.Action("Edit","Article",new {id=Model.ArticleId})'><span class="fa fa-edit fa-fw"></span>@UIResources.PublicArticleDetailPageEditArticleLabel</a>
    }

    <div class="mt-3 article-content">
        @Html.Raw(System.Web.HttpUtility.HtmlDecode(Model.Content))
    </div>
    <div class="clearfix">&nbsp;</div>
</div>

